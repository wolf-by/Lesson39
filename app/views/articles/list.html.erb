<h1>Articles list:</h1>

<table class="table table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Id</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @article.each do |article| {turbo:false} %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.id %></td>
        <td><%= link_to "Delete", article_path(article), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>

</table>